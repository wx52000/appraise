<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wxx.java.appraise.dao.UserPositionDao">
    <insert id="add" parameterType="list">
        insert into user_position(user_id , position_id)
        values
        <foreach collection="list" item="item" separator=",">
        (#{item.userId} , #{item.positionId})
        </foreach>
    </insert>
    <delete id="del" parameterType="list">
        delete
        from user_position
        where id in
        <foreach collection="list" item="item" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </delete>
    <select id="queryByUserId" resultType="java.lang.Integer">
        select position_id
        from user_position
        where user_id = #{id}
    </select>

</mapper>