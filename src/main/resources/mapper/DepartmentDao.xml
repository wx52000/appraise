<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="wxx.java.appraise.dao.DepartmentDao">
    <insert id="add">
        insert into department(name)
        values (#{name})
    </insert>
    <delete id="del">
        delete
        from department
        where id = #{id}
    </delete>
    <select id="query" resultType="wxx.java.appraise.entity.Department">
        select *
        from department
    </select>
    <select id="queryName" resultType="java.lang.Integer">
        select id
        from department
        where name = #{name}
    </select>
    <select id="selectByTec" resultType="java.lang.Integer">
        select did
        from technology
        where id = #{id}
    </select>
</mapper>